<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/simple1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="侵入式下拉刷新"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="非侵入下拉刷新"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="侵入式+波浪背景"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="非侵入式+波浪背景"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="加载更多"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="自动下拉刷新"
            android:textColor="#313131" />

        <Button
            android:id="@+id/simple7"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="自动上拉刷新"
            android:textColor="#313131" />
    </LinearLayout>
</ScrollView>